<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="answerHandler" class="ru.ikostrov.questionnaire.handler.AnswerHandler">
        <constructor-arg ref="freeMarkerConfiguration"/>
        <constructor-arg ref="questionnaireDao"/>
    </bean>
    <bean id="questionHandler" class="ru.ikostrov.questionnaire.handler.QuestionHandler">
        <constructor-arg ref="freeMarkerConfiguration"/>
        <constructor-arg ref="questionnaireDao"/>
    </bean>
    <bean id="questionnaireDao" class="ru.ikostrov.questionnaire.QuestionnaireDAO" factory-method="init">
        <constructor-arg>
            <bean class="org.h2.jdbcx.JdbcConnectionPool" factory-method="create">
                <constructor-arg value="jdbc:h2:~/questionnairedb"/>
                <constructor-arg value="mylogin"/>
                <constructor-arg value="mypassword"/>
            </bean>
        </constructor-arg>
    </bean>
    <bean id="freeMarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <property name="templateLoaderPath" value="/html/"/>
    </bean>
    <bean id="freeMarkerConfiguration" class="freemarker.template.Configuration" factory-bean="freeMarkerConfig"
          factory-method="getConfiguration"/>
</beans>